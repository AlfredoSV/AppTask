@model IEnumerable<TaskS>
@{
    ViewData["Title"] = "Home Page";
}

<h1>My Tasks</h1>
<br />
<a class="btn btn-primary" asp-controller="Home"
   asp-action="NewTask">New Task</a>
<br />

<table class="table table-dark table-striped mt-3">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Created</td>
            <td>Created by</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>@task.CreatedAt</td>
                <td>@task.UserCreated.Name</td>
                <td>@task.Status.Name</td>
            </tr>
        }        
    </tbody>
</table>



